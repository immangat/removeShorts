{
  "manifest_version": 3,
  "name": "YouTube Element Remover",
  "version": "1.0",
  "description": "Removes specified HTML elements from YouTube.com",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "YouTube Element Remover"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
